<% layout('layouts/boilerplate')%>
    <h1>Files</h1>

    <style>

    </style>
    <div class="row">
        <% for (let file of files) {%>

            <%if(file.split('.')[1]==='pdf'){%>
                <div class="col-12">
                    <iframe src="../uploads/<%= file  %>" width="1000rem" height="1200rem">
                    </iframe>
                    <hr>
                </div>

                <% } else if(file.split('.')[1]==='jpg' || file.split('.')[1]==='png' || file.split('.')[1]==='jpeg'
                    ){%>
                    <div class="col-12">
                        <a href="../uploads/<%= file  %>" class="btn btn-success" download>Download Below Image
                        </a>
                        <br>
                        <img src="../uploads/<%= file  %>" height="700rem" width="900rem">
                        <br>
                        <hr>
                    </div>
                    <%} else if(file.split('.')[1]==='mp4' || file.split('.')[1]==='mkv' ){%>
                        <div class="col-8">
                            <video width="80%" height="80%" controls>
                                <source src="../uploads/<%= file  %> " type="video/mp4">
                            </video>
                        </div>
                        <%}else if(file.split('.')[1]==='mp3' ){%>
                            <div class="col-12">
                                <div class="col-3">
                                    <audio controls>
                                        <source src="../uploads/<%= file  %> " type="audio/ogg">
                                    </audio>
                                </div>
                            </div>
                            <br>
                            <hr>
                            <br>
                            <% } else{%>

                                <div class="col-3">
                                    <a href="../uploads/<%= file  %>" class="btn btn-success" download> Download
                                        <%=file%>
                                    </a>
                                    <br>
                                    <br>
                                    <hr>
                                </div>
                                <%}%>

                                    <% } %>
    </div>
    <a class="btn btn-primary mb-5" href="/">Go back to upload page</a>